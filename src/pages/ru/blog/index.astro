---
import PageLayout from '../../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import { useTranslations } from '../../../i18n/utils.js';

const lang = 'ru';
const t = useTranslations(lang);

const posts = (await getCollection('blog', ({ data }) => {
  return data.lang === 'ru' && !data.draft;
})).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Fall back to English posts if no Russian posts exist
const enPosts = posts.length === 0
  ? (await getCollection('blog', ({ data }) => {
      return data.lang === 'en' && !data.draft;
    })).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  : [];

const displayPosts = posts.length > 0 ? posts : enPosts;
const isEnFallback = posts.length === 0;
---

<PageLayout
  title={`${t('blog.title')} | Иван Роганов`}
  lang={lang}
  canonicalPath="/ru/blog/"
  alternateLangPath="/blog/"
  alternateLang="en"
>
  <div class="max-w-3xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-white mb-8">{t('blog.title')}</h1>

    <div class="space-y-8">
      {displayPosts.map((post) => (
        <article class="border-b border-white/10 pb-8">
          <h2 class="text-2xl font-bold text-white mb-2">
            <a href={isEnFallback ? `/blog/${post.data.slug}/` : `/ru/blog/${post.data.slug}/`} class="hover:text-brand-accent transition-colors">
              {post.data.title}
            </a>
          </h2>
          <time class="text-gray-500 text-sm" datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('ru-RU', {
              year: 'numeric', month: 'long', day: 'numeric',
            })}
          </time>
          <p class="mt-2 text-gray-400">{post.data.description}</p>
          <a href={isEnFallback ? `/blog/${post.data.slug}/` : `/ru/blog/${post.data.slug}/`} class="text-brand-light hover:text-brand-accent text-sm mt-2 inline-block transition-colors">
            {t('blog.readMore')} &rarr;
          </a>
        </article>
      ))}
    </div>
  </div>
</PageLayout>
