---
import { useTranslations, getLocalePath } from '../i18n/utils.js';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);
const year = new Date().getFullYear();
---

<footer class="bg-surface-card border-t border-white/10">
  <!-- Gradient divider -->
  <div class="h-px bg-gradient-to-r from-transparent via-brand-accent/40 to-transparent"></div>

  <div class="max-w-6xl mx-auto px-6 md:px-12 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      <!-- Logo -->
      <div>
        <a href={getLocalePath(lang)} class="text-white font-bold text-xl tracking-tight">
          Ivan<span class="text-brand-accent">.</span>
        </a>
      </div>

      <!-- Quick links -->
      <nav class="flex flex-wrap justify-center gap-6 text-sm">
        <a href={`${getLocalePath(lang)}#superhero`} class="text-gray-400 hover:text-white transition-colors">{t('nav.portfolio')}</a>
        <a href={`${getLocalePath(lang)}#contact`} class="text-gray-400 hover:text-white transition-colors">{t('nav.contact')}</a>
        <a href={getLocalePath(lang, 'blog/')} class="text-gray-400 hover:text-white transition-colors">{t('nav.blog')}</a>
      </nav>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-white/5 text-center">
      <p class="text-gray-500 text-sm">&copy; {year} {t('footer.copyright')}</p>
    </div>
  </div>
</footer>
